{
  "name": "monad-stream-order",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:all": "bun run dev & bun run server",
    "server": "bun run server/websocket.ts",
    "server:node": "node server/websocket-node.js",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "icons": "bun run scripts/generate-icons.ts",
    "compile": "hardhat compile",
    "test:contracts": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.cjs --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.cjs --network sepolia",
    "deploy:base-sepolia": "hardhat run scripts/deploy.cjs --network baseSepolia",
    "deploy:monad": "hardhat run scripts/deploy.cjs --network monadTestnet",
    "verify": "hardhat run scripts/verify.cjs",
    "node": "hardhat node",
    "gas-report": "REPORT_GAS=true hardhat test"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.12",
    "canvas-confetti": "^1.9.4",
    "date-fns": "^4.1.0",
    "lightweight-charts": "4.2.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7",
    "viem": "^2.43.3",
    "wagmi": "^3.1.0",
    "ws": "^8.18.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "dotenv": "^16.6.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "hardhat": "^2.28.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
